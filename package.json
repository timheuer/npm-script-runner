{
  "name": "npmscriptrunner",
  "displayName": "NPM Script Browser",
  "description": "Lists the scripts from package.json and quick access to execute.",
  "version": "0.0.0-placeholder",
  "publisher": "TimHeuer",
  "author": {
    "name": "Tim Heuer",
    "url": "https://timheuer.com"
  },
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/npm-script-runner.git"
  },
  "qna": "https://github.com/timheuer/npm-script-runner/issues/new",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:npmScriptRunner.scripts",
    "onCommand:npmscriptrunner.runScript",
    "onCommand:npmscriptrunner.refreshScripts",
    "workspaceContains:package.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "NPM Script Runner",
      "properties": {
        "npmscriptrunner.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens shortcut to run scripts directly from package.json files"
        },
        "npmscriptrunner.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["off", "error", "warn", "info", "debug", "trace"],
          "enumDescriptions": [
            "No logging",
            "Only errors",
            "Errors and warnings",
            "Errors, warnings, and info",
            "All except trace",
            "All log levels"
          ],
          "description": "Set the logging level for the NPM Script Runner extension"
        }
      }
    },
    "commands": [
      {
        "command": "npmscriptrunner.runScript",
        "title": "Run NPM Script",
        "icon": "$(play)"
      },
      {
        "command": "npmscriptrunner.goToScript",
        "title": "Go to Script"
      },
      {
        "command": "npmscriptrunner.refreshScripts",
        "title": "Refresh NPM Scripts",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "npmScriptRunner.scripts",
          "name": "NPM Scripts"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "npmscriptrunner.runScript",
          "when": "view == npmScriptRunner.scripts && viewItem == npmScriptRunner.script",
          "group": "inline",
          "icon": "$(play)"
        }
      ],
      "view/title": [
        {
          "command": "npmscriptrunner.refreshScripts",
          "when": "view == npmScriptRunner.scripts",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "npmScriptRunner.scripts",
        "contents": "$(info) No package.json files found in workspace.",
        "when": "workbenchState != empty && !workspaceContains:**/package.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npm run check-types && npm run lint && node esbuild.js --production",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@timheuer/vscode-ext-logger": "^0.1.35"
  }
}
